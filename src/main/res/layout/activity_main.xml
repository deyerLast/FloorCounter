<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/acceler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/walkButton" android:text="@string/walking"
            android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toTopOf="@+id/acceler" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/climbButton" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.367"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/climbButton" android:text="@string/climb"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp" android:layout_marginRight="52dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/acceler"
            app:layout_constraintVertical_bias="0.431"/>




    <Toolbar android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/toolbar" tools:targetApi="lollipop"></Toolbar>


    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/save"
            android:text="@string/save"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/acceler" app:layout_constraintEnd_toStartOf="@+id/acceler"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>